<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>Shift.ErrorHandling.Infrastructure</PackageId>
    <Version>1.0.0</Version>
    <Authors>BTShift</Authors>
    <Company>BTShift</Company>
    <Description>Comprehensive error handling infrastructure for BTShift microservices</Description>
    <RepositoryUrl>https://github.com/BTShift/shift-error-handling</RepositoryUrl>
    <PackageProjectUrl>https://github.com/BTShift/shift-error-handling</PackageProjectUrl>
    <PackageTags>error-handling;grpc;http;microservices;btshift</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.AspNetCore" Version="2.57.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="8.0.0" />
    <PackageReference Include="Serilog" Version="3.1.1" />
    <PackageReference Include="System.Text.Json" Version="8.0.0" />
  </ItemGroup>

</Project>